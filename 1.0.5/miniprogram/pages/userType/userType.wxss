.box{
  width: 100vw;
  color: #fff;
  padding-top: 50rpx;
}

.ITEM{
  width: 95%;
  margin-left: 2.5%;
  /* border: 2rpx solid #ecd823; */
  height: 500rpx;
  border-radius: 20rpx;
  box-shadow: 4rpx 2rpx 6rpx 4rpx #ecd823;
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
}

.bg{
  width: 100%;
  height: 70% !important;
  border-radius: 20rpx;
}

.text{
  display: block;
  padding-left: 20rpx;
  margin-top: 20rpx;
}

.fixed{
  position: fixed;
  z-index: 888;
  bottom: 100rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.add{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.sp{
  font-size: 25rpx;
}

.spBtn{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.btnmini{
  width: 220rpx;
  height: 45rpx !important;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}